{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2022"],
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "graph/*": ["src/graph/*"],
      "executor/*": ["src/executor/*"],
      "coord/*": ["src/coord/*"],
      "agents/*": ["src/agents/*"],
      "knowledge/*": ["src/knowledge/*"],
      "values/*": ["src/values/*"],
      "monitor/*": ["src/monitor/*"],
      "events/*": ["src/events/*"],
      "mcp/*": ["src/mcp/*"],
      "resources/*": ["src/resources/*"],
      "infra/*": ["src/infra/*"],
      "state/*": ["src/state/*"],
      "viz/*": ["src/viz/*"],
      "graph-forge/*": ["graph-forge/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["tests", "**/*.test.*", "**/*.spec.*", "dist", "node_modules"]
}
