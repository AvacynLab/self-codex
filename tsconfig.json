{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM.Iterable"],
      "module": "ES2022",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
  }
  