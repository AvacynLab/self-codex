{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "graph/*": ["src/graph/*"],
      "executor/*": ["src/executor/*"],
      "coord/*": ["src/coord/*"],
      "agents/*": ["src/agents/*"],
      "knowledge/*": ["src/knowledge/*"],
      "values/*": ["src/values/*"],
      "monitor/*": ["src/monitor/*"],
      "events/*": ["src/events/*"],
      "mcp/*": ["src/mcp/*"],
      "resources/*": ["src/resources/*"],
      "infra/*": ["src/infra/*"],
      "state/*": ["src/state/*"],
      "viz/*": ["src/viz/*"]
    },
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "tests"]
}
