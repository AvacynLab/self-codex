{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "ES2022",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": "src",
      "paths": {
        "executor/*": ["executor/*"],
        "coord/*": ["coord/*"],
        "knowledge/*": ["knowledge/*"],
        "values/*": ["values/*"],
        "graph/*": ["graph/*"]
      },
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "types": ["node"]
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules", "tests"]
  }
  