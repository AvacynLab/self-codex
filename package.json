{
    "name": "mcp-self-fork-orchestrator",
    "version": "1.3.0",
    "description": "MCP server (STDIO) : orchestre des sous-chats parallèles avec streaming et consultation live par enfant, sans clé API.",
    "type": "module",
    "bin": {
      "mcp-self-fork-orchestrator": "dist/server.js"
    },
    "scripts": {
      "build": "tsc && tsc -p graph-forge/tsconfig.json",
      "start": "node dist/server.js",
      "start:http": "node dist/server.js --http --http-host 0.0.0.0 --http-port 4000 --no-stdio",
      "dev": "node --loader ts-node/esm src/server.ts",
      "test": "npm run build --silent && node --loader ./node_modules/ts-node/esm.mjs ./node_modules/mocha/bin/mocha.js --reporter tap \"tests/**/*.test.ts\"",
      "lint": "tsc --noEmit --pretty false && tsc --noEmit --project graph-forge/tsconfig.json"
    },
    "dependencies": {
      "@modelcontextprotocol/sdk": "^1.18.1",
      "zod": "^3.23.8"
    },
    "devDependencies": {
      "@types/chai": "^4.3.12",
      "@types/mocha": "^10.0.6",
      "@types/node": "^22.10.1",
      "chai": "^5.1.1",
      "mocha": "^10.7.0",
      "ts-node": "^10.9.2",
      "typescript": "^5.6.3"
    },
    "engines": {
      "node": ">=18.17"
    },
    "license": "MIT"
  }
  